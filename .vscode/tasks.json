{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "在虚拟环境中安装包",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pip.exe",
            "args": [
                "install",
                "${input:packageName}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "packageName",
            "type": "promptString",
            "description": "输入你要安装的包名"
        }
    ]
}